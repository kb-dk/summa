<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<!-- ===================================================================== -->
<!--                                                                       -->
<!--  Log4j Configuration                                                  -->
<!--                                                                       -->
<!-- ===================================================================== -->

<!-- $Id: log4j.xml,v 1.10 2007/01/19 09:56:51 hal Exp $ -->

<!--
   | For more configuration infromation and examples see the Jakarta Log4j
   | owebsite: http://jakarta.apache.org/log4j
 -->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

    <!-- ================================= -->
    <!--         Send to logfile           -->
    <!-- ================================= -->



    <!-- A time/date based rolling appender -->

    <appender name="FILE" class="org.apache.log4j.RollingFileAppender">
        <param name="Threshold" value="WARN"/><!-- or DEBUG or INFO -->
        <param name="File" value="/home/summa/logs/search_engine_log.log"/>
        <param name="Append" value="true"/>
        <param name="MaxFileSize" value="100MB"/>
        <param name="MaxBackupIndex" value="5"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="CLUSTER" class="org.apache.log4j.RollingFileAppender">
        <param name="Threshold" value="WARN"/><!-- or DEBUG or INFO -->
        <param name="File" value="/home/summa/logs/cluster_log.log"/>
        <param name="Append" value="true"/>
        <param name="MaxFileSize" value="100MB"/>
        <param name="MaxBackupIndex" value="5"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <appender name="PERFORMANCE" class="org.apache.log4j.RollingFileAppender">
        <param name="Threshold" value="INFO"/><!-- or DEBUG or INFO -->
        <param name="File" value="/home/summa/logs/performance_log.log"/>
        <param name="Append" value="true"/>
        <param name="MaxFileSize" value="100MB"/>
        <param name="MaxBackupIndex" value="5"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>


    <!-- The full log appender uses a extremely slow pattern, on production systems use only this appender with a threshold of fatal -->
    <appender name="FULL_LOG" class="org.apache.log4j.RollingFileAppender">
        <param name="Threshold" value="FATAL"/>
        <param name="File" value="/home/summa/logs/search_engine_fatal.log"/>
        <param name="Append" value="true"/>
        <param name="MaxFileSize" value="1MB"/>
        <param name="MaxBackupIndex" value="100"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] - %l [LINENUMBER: %L] [METHOD: %M] [%X]  %m%n"/>
        </layout>
    </appender>

    <appender name="SEARCH-LOG" class="org.apache.log4j.RollingFileAppender">
        <param name="Threshold" value="INFO"/><!-- or DEBUG or INFO -->
        <param name="File" value="/home/summa/logs/query_log.log"/>
        <param name="Append" value="true"/>
        <param name="MaxFileSize" value="100MB"/>
        <param name="MaxBackupIndex" value="50"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p [%t] [%d] [%c] %m%n"/>
        </layout>
    </appender>

    <logger name="dk.statsbiblioteket.summa.cluster">
        <level value="info" />
        <appender-ref ref="CLUSTER" />
    </logger>

    <logger name="dk.statsbiblioteke.performance.logger">
        <level value="info" />
        <appender-ref ref="PERFORMANCE" />
    </logger>

    <logger name="dk.statsbiblioteket.summa.search">
        <level value="WARN" />
        <appender-ref ref="FILE" />
    </logger>

    <logger name="dk.statsbiblioteket.summa.suggest">
        <level value="info" />
        <appender-ref ref="FILE" />
    </logger>

    <logger name="dk.statsbiblioteket.summa.common">
        <level value="info" />
        <appender-ref ref="FILE" />
    </logger>

    <logger name="dk.statsbiblioteket.summa.search.Log">
        <level value="info" />
        <appender-ref ref="SEARCH-LOG" />
    </logger>

    <!-- all loggeres inherit the root logger - so don't include the root appenders in the other loggers (will duplicate log entries in the log file) -->
    <root>
        <level value="FATAL" />
        <appender-ref ref="FULL_LOG" />
    </root>

</log4j:configuration>


