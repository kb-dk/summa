  <modelVersion>4.0.0</modelVersion>
  <groupId>${summaGroupId}</groupId>
  <artifactId>summa</artifactId>
  <name>Summa</name>
  <version>${summaVersion}</version>
  <inceptionYear>2010</inceptionYear>
  <url>http://summa.sourceforge.net</url>
  <packaging>pom</packaging>

  <!-- The MOTHER SB pom -->
  <parent>
