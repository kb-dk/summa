  <!-- General building for summa -->
  <!-- TOOD create main summa.jar, summa-javadoc.jar, summa-sources -->
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.1</version>
        <configuration>
          <compilerVersion>1.6.0_20</compilerVersion>
          <optimize>true</optimize>
          <source>1.6</source>
          <target>1.6</target>
          <compilerArgument>-Xlint</compilerArgument>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <testFailureIgnore>true</testFailureIgnore>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <!-- Summa modules -->
  <modules>
    <module>Common</module>
    <module>Storage</module>
    <module>Search</module>
    <module>Ingest</module>
    <module>Index</module>
    <module>FacetBrowser</module>
    <module>Support</module>
    <module>Control</module>
    <module>Workflow</module>
    <module>Web</module>
    <module>Samples/Summix/</module>
  </modules>

    <!-- plugin to generate html output for test cases -->
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-report-plugin</artifactId>
        <version>2.5</version>
        <configuration>
          <showSuccess>false</showSuccess>
        </configuration>
      </plugin>
    </plugins>
  </reporting>

